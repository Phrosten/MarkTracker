<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:style="http://schemas.android.com/tools"
    package="com.jonasheinrich.www.marktracker">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".Activities.OverviewActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.Settings.ColorSettingsActivity" />
        <activity android:name=".Activities.Settings.SubjectSettingsActivity" />
        <activity android:name=".Activities.PointCalculatorActivity" />
        <activity android:name=".Activities.SemesterOverviewActivity" />
        <activity android:name=".Activities.SubjectSemesterOverviewActivity" />
        <activity
            android:name=".MarkItem.MarkItemEditPopupActivity"
            android:theme="@style/AppTheme.TransparentTheme" />
        <activity
            android:name=".Activities.MultiAddActivity"
            android:theme="@style/AppTheme.TransparentTheme"/>
    </application>

</manifest>